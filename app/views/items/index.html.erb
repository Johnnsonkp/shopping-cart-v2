<section id="items-display">
  <div class="showcase"></div>
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Items</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>Description</th>
          <th>Size</th>
          <th>Color</th>
          <th>Brand</th>
          <th>Condition</th>
          <th>Url</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.title %></td>
            <td><%= item.price %></td>
            <td><%= item.description %></td>
            <td><%= item.size %></td>
            <td><%= item.color %></td>
            <td><%= item.brand %></td>
            <td><%= item.condition %></td>
            <td><%= item.url %></td>
            <td><%= link_to 'Show', item %></td>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Item', new_item_path %>
  </div>
</section>